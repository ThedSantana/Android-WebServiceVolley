<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp" >

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/miniatura"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/miniatura"
        android:layout_toRightOf="@+id/miniatura"
        android:textSize="@dimen/titulo"
        android:textStyle="bold" />

    <!-- Rating -->
    <TextView
        android:id="@+id/classificacao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/miniatura"
        android:textSize="@dimen/classificacao" />
    
    <!-- Genre -->
    <TextView
        android:id="@+id/genero"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classificacao"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/miniatura"
        android:textColor="@color/genero"
        android:textSize="@dimen/genero" />

    <!-- Release Year -->
    <TextView
        android:id="@+id/ano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/ano"
        android:textSize="@dimen/ano" />

</RelativeLayout>